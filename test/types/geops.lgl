    print mpos - mpos * 2.;

    polar<plane>.vector ppo = [1., 3.14159265];
    polar<plane>.vector ppo2 = [1., 0.];
    
    print 3. * ppo * 2.;
    print ppo + ppo2;

    hom<world>.point hpos = [1., 2., 3., 2.];
    hom<world>.vector hvec = [1., 1., 1., 0.];

    print hpos + hvec * 2.;
    print hpos - (hpos + hvec);
}
