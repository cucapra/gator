prototype geometry {
    object point;
    object vector;

    vector +(vector x, vector y);
    vector -(vector x, vector y);
    vector *(vector v, scalar s);
    vector *(scalar s, vector v);
    vector -(vector v);
    point translate(point p, vector v);
    point +(point p, vector v);
    point -(point p, vector v);
    vector -(point x, point y);
    vector -(point x);
}
